<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSKPUS4pyMq9SP2_xi-i1ojgvvDBAwiQVcKMw&usqp=CAU)">
<h1>Cocktails</h1>
</div>

<div class="container">
  <h1><%= @cocktail.name %></h1>

  <div class="cards mt-5">
   <div class="row">
    <div class="col">
    <div class="cards">
    <% @cocktail.doses.each do |dose| %>
      <%= dose.description %>
      <%= link_to dose_path(dose), method: :delete, data: {confirm: "Are you sure ?"},class: "card-remove-link" do %>
        <i class="fas fa-fire"></i>
      <% end %>
    </div>
    <% end %>
    </div>
    </div>
   </div>
  </div>
  <%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail) %>
  <%= link_to 'Back', cocktails_path %>

</div>